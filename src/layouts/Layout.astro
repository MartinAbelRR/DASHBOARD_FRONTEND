---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import SideBar  from '../components/SideBar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ViewTransitions />
	</head>
	<body>
		<div id="dashboard" class="grid-cols-[95px_1fr] h-screen py-6 relative xl:grid-cols-[300px_1fr]">
			<aside class="[grid-area:aside] flex h-full  w-full">
				<SideBar />
			</aside>

			<header class="[grid-area:header] relative space-y-3 xl:px-8">
				<Header />
			</header>

			<main class="[grid-area:main] relative py-8 xl:px-8">
				<slot />
			</main>
		</div>
		
	</body>
</html>
<style>
	#dashboard {
		display: grid;
		grid-template-areas: 
		"aside header header"
		"aside main main"
		"aside main main"
		;
		grid-template-rows: auto 1fr;
	}

</style>

<style is:global>
	html {
		font-family: 'Poppins', sans-serif;		
	}
	
	::-webkit-scrollbar {
		display: none;
	}
</style>
